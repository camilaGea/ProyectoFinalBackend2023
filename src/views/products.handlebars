<div>
    <div class="header">
        <h2>Bienvenido {{user.nombre}}</h2>
        <p>Tu rol es {{user.rol}}</p>
        <a href="/api/sessions/logout"><button>Cerrar sesion</button></a>
        
        <a href="../carts/{{idcart}}"><button>Carrito</button></a>
    </div>

     <table id="tableProduct" >
        <thead>
            <tr>
            <th >Nombre</th>
            <th >Precio</th>
            <th >Stock</th>
            <th >Categoria</th>
            <th >Descripcion</th>
            </tr>
        </thead>
        {{#each productos.docs}}
            <tbody>
                <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.description}}</td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="agregarACarrito('{{this._id}}','{{../idcart}}','{{this.stock}}')">Agregar a carrito</button>
                </td>
                </tr>
            </tbody>
        {{/each}}
    </table>
    {{#if productos.hasPrevPage}}
    <a href={{productos.prevLink}}><button>Anterior</button></a>
    {{/if}}
    {{#if productos.hasNextPage}}
    <a href={{productos.nextLink}}><button>Siguiente</button></a>
    {{/if}}
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/producto.js"></script>